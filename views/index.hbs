<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body rounded-lg shadow  bd-highlight">
      <div class="d-flex m-auto">
        <h1><i class="fas fa-link"></i></h1>
        <a href="/"  style="text-decoration:none" class="text-body">
          <h1 class="pl-3">URL Shortener</h1>
        </a>
      </div>
      <form action="/" method="post">

        <div class="input-group mb-3 mt-3">
          <input type="url" class="form-control" placeholder="請輸入網址" name="originalURL" id="originalURL">
        </div>

        <div class="input-group mb-3 justify-content-center">
          <div class="d-flex">
            <input type="submit" value="產生短網址" class="btn btn-outline-primary m-2">
          </div>
          {{!-- 資料庫已有 --}}
          {{#if messageOne}}
          <div class="alert alert-warning mt-3" role="alert">
            {{messageOne}}
          </div>
          <h5 class="mt-2">
            <a href="{{ urllist.originalURL }}" target="_blank" id="copy" style="text-decoration:none;">{{
              urllist.newShortURL}}</a>
          </h5>
          <button class="btn btn-primary ml-auto" type="button" onclick="copyEvent('copy')">Copy</button>
          {{/if}}

          {{!-- 重新製作給予短網址 --}}
          {{#if messageTwo}}
          <div class="alert alert-warning mt-3" role="alert">
            {{messageTwo}}
          </div>
          <h5 class="mt-2">
            <a class="mr-2" href="{{ originalURL }}" target="_blank" id="copy">{{ newShortURL }}</a>
          </h5>
          <button class="btn btn-primary ml-auto" type="button" onclick="copyEvent('copy')">Copy</button>
          {{/if}}
        </div>
      </form>
    </div>
  </div>
</div>